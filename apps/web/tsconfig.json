{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "allowJs": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": ["@testing-library/jest-dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@ndis/ui": ["../../packages/ui/src"],
      "@ndis/validation": ["../../packages/validation/src"],
      "@ndis/config": ["../../packages/config/src"],
      "@ndis/database": ["../../packages/database/src"],
      "@ndis/types": ["../../packages/types/src"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["src", ".next/types/**/*.ts", "jest.setup.ts"],
  "exclude": ["node_modules"]
}
